/*********************** Custom CSS for Boost Filter & Search  ************************/
{% assign breakpointMobile = '767px' %}
{% assign breakpointDesktop = '768px' %}
{% assign searchBoxMobileHeight = '64px' %}

/**************************** Place your custom css below  ****************************/
.collection__nav--sort {
  justify-content: flex-end;
  background: white;
  padding-top: 30px;
}

.bc-page-width {
  width: 100%;
  background: white;
}

.bc-filter-tree-h-wrapper {
  display: flex;
  justify-content: center;
  flex-grow: 1;
}

.boost-pfs-filter-top-sorting {
  height: 50px;
  margin-right: 20px;
  margin-top: -10px;
}

.boost-pfs-filter-tree {
  margin: 0 20px 0 20px;
  width: initial !important;
}

.boost-pfs-filter-tree-h {
  flex: 1;
  margin: 0 20px 0 20px;
}

@media only screen and (max-width: {{breakpointMobile}}) {
  .boost-pfs-filter-tree-mobile {
    margin: 20px;
  }

  .boost-pfs-filter-top-sorting {
    margin: 0 20px 0 20px;
  }

  .boost-pfs-filter-top-sorting select {
    width: 100%;
  }
}
button.boost-pfs-filter-button:hover, button.boost-pfs-filter-button:focus {
  color: initial;
  background: initial;
}

button.boost-pfs-filter-button:active {
  transform: none;
}

/**** Custom Search result toolbar ****/
.boost-pfs-search-result-toolbar {
  display: flex;
  align-items: center;
  margin: 35px 0;
  padding-left: 20px;
  padding-right: 20px;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  white-space: nowrap;
}
.boost-pfs-search-result-toolbar .boost-pfs-search-result-item:first-child {
  flex: auto;
}
.boost-pfs-search-result-toolbar .boost-pfs-search-result-panel-controls {
  padding: 17px 0;
  margin: 0;
}
.boost-pfs-search-result-toolbar .boost-pfs-search-result-panel-item {
  margin-bottom: 0;
}
.boost-pfs-search-result-toolbar button {
  color: #545454;
  padding: 5px 0;
  white-space: normal;
}
@media (max-width: {{breakpointMobile}}) {
  .boost-pfs-search-result-toolbar .boost-pfs-search-total-result {
    display: none;
  }
}
.boost-pfs-search-result-toolbar + .collection__nav {
  padding-top: 0;
}

.boost-pfs-search-result-list-item-image img {
  max-width: 100%;
}

.boost-pfs-search-result-collections .boost-pfs-search-result-list-item, .boost-pfs-search-result-pages .boost-pfs-search-result-list-item {
  padding: 20px;
}

.boost-pfs-filter-message {
  padding-left: 20px;
}

.boost-pfs-total-products {
  padding-top: 7px;
  margin-left: 20px;
  margin-bottom: 20px;
}

@media (max-width: {{breakpointMobile}}) {
  .boost-pfs-total-products {
    margin-left: 10px;
    padding-top: 20px;
  }
  
  .boost-pfs-filter-tree-mobile-style2 .boost-pfs-filter-mobile-toolbar .boost-pfs-filter-close span {
    background: #B1945C;
  }
  
  .boost-pfs-filter-tree-mobile-style2 .boost-pfs-filter-mobile-footer button {
    background: #B1945C;
  }
  
  .boost-pfs-filter-products {
    width: 100%;
    margin: auto;
  }
  
  .bc-filter-tree-h-wrapper {
    display: none;
  }
  
  .collection__nav--sort {
    justify-content: space-between;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .boost-pfs-filter-tree-mobile-button {
    width: 30% !important;
    margin: 0px;
  }
  
  .boost-pfs-filter-top-sorting {
    margin: 0px;
    margin-left: 10px;
    align-self: flex-start;
    display: inline-flex;
    height: 35px;
  }
  
  .boost-pfs-filter-top-sorting select {
    margin: 0px;
    padding: 0px;
    align-self: flex-start;
  }
  
  .boost-pfs-filter-top-sorting label {
    width: 40%;
  }
}

